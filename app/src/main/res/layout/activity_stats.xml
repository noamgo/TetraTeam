<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tetrateam_background"
    tools:context=".AboutMe">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/tetris_font_bold"
            android:gravity="center"
            android:padding="10dp"
            android:text="Player stats"
            android:textColor="@color/white"
            android:textSize="60dp" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:background="@color/cardview_shadow_start_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp">

                    <TableRow>
                        <TextView
                            android:paddingVertical="10dp"
                            android:layout_width="0dp"
                            android:background="@drawable/cell_border"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Rank"
                            android:textColor="@color/white"
                            android:textSize="24dp"
                            android:gravity="center"/>
                        <TextView
                            android:paddingVertical="10dp"
                            android:layout_width="0dp"
                            android:background="@drawable/cell_border"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Player"
                            android:textColor="@color/white"
                            android:textSize="24dp"
                            android:gravity="center"/>
                        <TextView
                            android:paddingVertical="10dp"
                            android:layout_width="0dp"
                            android:background="@drawable/cell_border"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Score"
                            android:textColor="@color/white"
                            android:textSize="24dp"
                            android:gravity="center"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:paddingVertical="10dp"
                            android:id="@+id/tvRank1"
                            android:background="@drawable/cell_border"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            android:gravity="center"/>
                        <TextView
                            android:paddingVertical="10dp"
                            android:id="@+id/tvPlayer1"
                            android:background="@drawable/cell_border"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            android:gravity="center"/>
                        <TextView
                            android:paddingVertical="10dp"
                            android:id="@+id/tvScore1"
                            android:background="@drawable/cell_border"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            android:gravity="center"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:paddingVertical="10dp"
                            android:id="@+id/tvRank2"
                            android:background="@drawable/cell_border"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            android:gravity="center"/>
                        <TextView
                            android:paddingVertical="10dp"
                            android:id="@+id/tvPlayer2"
                            android:background="@drawable/cell_border"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            android:gravity="center"/>
                        <TextView
                            android:paddingVertical="10dp"
                            android:id="@+id/tvScore2"
                            android:background="@drawable/cell_border"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            android:gravity="center"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:paddingVertical="10dp"
                            android:id="@+id/tvRank3"
                            android:background="@drawable/cell_border"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            android:gravity="center"/>
                        <TextView
                            android:paddingVertical="10dp"
                            android:id="@+id/tvPlayer3"
                            android:background="@drawable/cell_border"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            android:gravity="center"/>
                        <TextView
                            android:paddingVertical="10dp"
                            android:id="@+id/tvScore3"
                            android:background="@drawable/cell_border"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="22dp"
                            android:gravity="center"/>
                    </TableRow>

                </TableLayout>
            </LinearLayout>

        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            style="@style/ButtonsStyle"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:text="Back"
            android:textSize="38sp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>